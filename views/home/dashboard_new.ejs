<script type="text/ng-template" id="createEvent.html">
    <div class="modal-all">
	    <div class="modal-header">
	        <h3 class="modal-title">Create Event</h3>
	    </div>
	    <div class="modal-body">
	    	<form class="form-horizontal">
		      <div class="form-group">
						<div class="col-lg-12">
							<input class="form-control" type="text" ng-model="event_name" placeholder="Event Name">
						</div>
					</div>
					<div class="form-group">
						<div class="col-lg-12">
							<textarea class="form-control" ng-model="event_details" placeholder="Event Details"></textarea>
						</div>
					</div>
					<div class="form-group">
						<div class="col-lg-12">
							<input class="form-control" id="location_picker" type="text" ng-model="event_place" placeholder="Event Location">
						</div>
					</div>
					<div class="form-group">
						<div class="col-lg-5">
							<p class="input-group">
								<input class="form-control" type="text" datepicker-popup="{{format}}" ng-model="dt" is-open="opened" min-date="minDate" max-date="'2015-06-22'", datepicker-options="dateOptions" date-disabled="disabled(date, mode)" ng-required="true", close-text="Close" placeholder="Start Date" />
								<span class="input-group-btn">
									<button type="button" class="btn btn-side" ng-click="open($event)">
										<i class="glyphicon glyphicon-calendar"></i>
									</button>
								</span>
							</p>
						</div>
						<div class="col-lg-5 col-lg-push-2">
							<p class="input-group pull-right">
							<input class="form-control" type="text" datepicker-popup="{{format2}}" ng-model="dt2" is-open="opened2" min-date="minDate2" max-date="'2015-06-22'", datepicker-options="dateOptions2" date-disabled="disabled2(date2, mode2)" ng-required="true", close-text="Close" placeholder="End Date" />
							<span class="input-group-btn">
								<button type="button" class="btn btn-side" ng-click="open2($event)">
									<i class="glyphicon glyphicon-calendar"></i>
								</button>
							</span>
						</p>
						</div>
					</div>
				</form>
			</div>
		  <div class="modal-footer">
	        <button class="btn btn-next" ng-click="submitEvent(event_name, event_details, event_place, event_start_date, event_end_date)">Next</button>
	    </div>
    </div>
</script>

