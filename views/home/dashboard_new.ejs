<script type="text/ng-template" id="createEvent.html">
    <div class="modal-header">
        <h3 class="modal-title">Create Event</h3>
    </div>
    <div class="modal-body">
    	<form class="form-horizontal">
	      <div class="form-group">
					<label class="col-lg-2 control-label"> Name </label>
					<div class="col-lg-10">
						<input class="form-control" type="text" ng-model="event_name" placeholder="Event Name">
					</div>
				</div>
				<div class="form-group">
					<label class="col-lg-2 control-label"> Details </label>
					<div class="col-lg-10">
						<textarea class="form-control" ng-model="event_details" placeholder="Event Details"></textarea>
					</div>
				</div>
				<div class="form-group">
					<label class="col-lg-2 control-label"> Place </label>
					<div class="col-lg-10">
						<input class="form-control" type="text" ng-model="event_place" placeholder="Event Location">
					</div>
				</div>
				<div class="form-group">
					<label class="col-lg-2 control-label"> Place </label>
					<div class="col-lg-5">
						<input class="form-control" type="text" ng-model="event_start_date" placeholder="Start Date">
					</div>
					<div class="col-lg-5">
						<input class="form-control" type="text" ng-model="event_end_date" placeholder="End Date">
					</div>
				</div>
			</form>
		</div>
	  <div class="modal-footer">
        <button class="btn btn-primary" ng-click="submitEvent(event_name, event_details, event_place, event_start_date, event_end_date)">OK</button>
        <button class="btn btn-default" ng-click="cancel()">Cancel</button>
    </div>
</script>